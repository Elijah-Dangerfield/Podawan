<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Fragmented" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.Fragmented" parent="NightAdjusted.Theme.Fragmented"/>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowSplashScreenBackground">@color/ic_launcher_background_tint</item>
        <item name="postSplashScreenTheme">@style/Theme.Fragmented</item>
    </style>

</resources>
